# http://editorconfig.org
root = true

[*]
indent_style = tab
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[*.html]
indent_style = spaces

[*.scss]
indent_style = spaces

[*.{yml,yaml}]
indent_style = spaces
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true
